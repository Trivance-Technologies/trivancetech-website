{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Content": {
      "type": "richtext"
    },
    "Title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "CoverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title",
      "required": true
    },
    "Tag": {
      "type": "string",
      "required": true
    }
  }
}
